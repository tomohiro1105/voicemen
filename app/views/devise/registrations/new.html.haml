.signup-wrapper
  .signup-box
    %h2.signup__title 新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .signup-form
        .signup-form__field
          = f.label :name, "ニックネーム"
          %br/
          = f.text_field :name, autofocus: true, autocomplete: "name",class:"signup-form__field__text"
        .signup-form__field
          = f.label :email, "Eメール"
          %br/
          = f.email_field :email, autocomplete: "email",class:"signup-form__field__text"
        .signup-form__field
          = f.label :password, "パスワード"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password",class:"signup-form__field__text"
        .signup-form__field
          = f.label :password_confirmation, "パスワード確認"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password",class:"signup-form__field__text"
        .signup-form__field
          = f.submit "登録", class:"signup-form__field__btn"
      
